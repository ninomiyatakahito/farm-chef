<div class="share-header">
  <div class="header-logo">
    <%= link_to image_tag("farm-chef-logo.png", class:"farm-chef-icon"), "/" %>
  </div>
  <div class='search-bar-contents'>
    <form class="search-form" action="#">
        <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button" >検索</button>
    </form>
  </div>

  <%# ログインしているときは以下を表示する %>
    <% if user_signed_in? %>
      <div class="greeting"> 
          マイプロフィール
        <%= link_to "#{current_user.name}さん", "/users/#{current_user.id}", class: :hoge%>
      </div> 
      <div class="user-edit">
        <li><%=  link_to 'プロフィール編集', edit_user_registration_path %></li>
      </div>
    <% else %>
<%# // ログインしているときは上記を表示する %>
    <% end %>

  <div class="user-status">
    <% if user_signed_in? %>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout"%></li>
    <% else %>
      <li><%= link_to 'ログイン', new_user_session_path %></li>
      <li><%= link_to '新規登録', new_user_registration_path %></li>
    <% end %>
  </div>

  <div class="messages-admin-list">
    <b>管理者ツール</b>
    <li><%= link_to '管理者ページ', messages_path %></li>
  </div>
  
</div>
